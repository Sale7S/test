@model COCAS.Models.passwordresetVM
<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="X-UA-Compatible" content="IE=11; IE=10; IE=9; IE=8; IE=7; IE=EDGE" />
	<meta charset="UTF-8" />
	<title>password reset</title>
	<link rel="stylesheet" type="text/css" href="~/css/passwordreset/password_reset_Ar.css">
</head>
<body dir="RTL">
	<div class="headerContent">
		<div class="logo">
			<a href="">
				<img src="~/images/passwordreset/logo.png" title="Home page">
			</a>
		</div>
		<div class="vision2030">
			<img src="~/images/passwordreset/vision2030.png" title="Home page">
		</div>
	</div>

	<div class="content">
		<li>تغيير كلمة المرور </li>		
	</div>
	
	<div id="main">
		<form>
            <div asp-validation-summary="All"></div>
            <div class="reset">
                <input asp-for="Username" type="text" placeholder="username">  <span asp-validation-for="Username"></span> <br>
                <input asp-for="NewPassword" type="password" placeholder="كلمة المرور الجديدة">  <span asp-validation-for="NewPassword"></span> <br>
                <input asp-for="ConfirmNewPassword" type="password" placeholder="تأكيد كلمة المرور الجديدة">  <span asp-validation-for="ConfirmNewPassword"></span> <br>
                <input type="submit" name="submit" value="تغيير كلمة المرور">
                <a href="">نسيت كلمة المرور ؟</a>
            </div>
		</form>
		
		<div class="info">
			<li>طول كلمة المرور لا يقل عن 8 خانات</li>
			<li>ا بد أن تحتوي على الأقل على رقم (من 0-9)</li>		
			<li>لابد أن تحتوي على حروف كبيرة (Capital Letters)</li>		
			<li>لا بد أن تحتوى على حروف صغيرة (Small letters)</li>		
			<li>لابد أن تحتوي على الأقل على رمز من هذه الرموز <br>( ~ ، ! ، @@ ، # ، $ ، % ، ^ ، & ، * ، ( ، ) ، _ ، + ، - )</li>
		</div>
	</div>
</body>
</html>