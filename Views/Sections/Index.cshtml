@model IEnumerable<COCAS.Models.Section>

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=11; IE=10; IE=9; IE=8; IE=7; IE=EDGE" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8" />
    <title>Sections</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/css/Login/style_Ar.css?ver=003">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body dir="rtl" class="text-center">
    <script>
        window.onload = function () {
            var table = document.getElementById("table");
            var body = document.querySelector("body");
            var bodyHeight = (body.style.height - (body.style.height - screen.height));

            table.style.height = (bodyHeight*.75).toString();
        }
    </script>
    <div class="table-responsive text-center" id="table">
        <table class="table table-striped">
            <thead>
                <tr class="text-center">
                    <th scope="col">
                        رمز المقرر
                    </th>
                    <th scope="col">
                        اسم المقرر
                    </th>
                    <th scope="col">
                        النشاط
                    </th>
                    <th scope="col">
                        الشعبة
                    </th>
                    <th scope="col">
                        الساعات
                    </th>
                    <th scope="col">
                        اليوم
                    </th>
                    <th scope="col">
                        الوقت
                    </th>
                    <th scope="col">
                        القاعة
                    </th>
                    <th scope="col">
                        تاريخ الاختبار
                    </th>
                    <th scope="col">
                        المحاضر
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var section in Model)
                {
                    <tr id="sectionNum" data-value="@Html.DisplayFor(modelItem => section.Number)">
                        <td>
                            @Html.DisplayFor(modelItem => section.Course.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => section.Course.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => section.Activity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => section.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => section.Duration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => section.Day)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => section.StartTime) @Html.DisplayFor(modelItem => section.EndTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => section.Place)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => section.FinalExam)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => section.Instructor.FullName)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a href="javascript:history.back()">رجوع</a>
</body>