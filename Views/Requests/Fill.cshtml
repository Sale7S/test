@model COCAS.Models.CreateRequestViewModel

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=11; IE=10; IE=9; IE=8; IE=7; IE=EDGE" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8" />
    <title>@Model.FormTitle</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/css/Login/style_Ar.css?ver=003">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body dir="rtl">
    <div class="content text-center">
        <label class="remove" style="background-color: #28a745; border-radius: 3px; margin: 5px; margin-top: 20px;">@ViewData["Requested"]</label>
        <form id="form" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label class="control-label" style="padding-top: 50px; padding-bottom: 50px;" asp-for="Student">
                    <span style="padding-left: 300px;">اسم الطالب: @Model.Student.FullName</span>
                    <span style="padding-left: 300px;">الرقم الجامعي: @Model.Student.ID</span>
                    <span>قسم: @Model.Student.Department.Name</span>
                </label>
                <input type="hidden" asp-for="Student" value="@Model.Student.ID" />
            </div>
            @for (var i = 0; i < 5; i++) {
                <div class="form-group">
                    <input asp-for="SectionsNumbers[i]" />
                    <span asp-validation-for="SectionsNumbers[i]"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" name="submit" value="اختيار" class="btn btn-default" />
            </div>
        </form>
        <a class="btn btn-default" href="~/Sections/Index">قائمة الشعب المتاحة</a>
    </div>
</body>