@model COCAS.Models.ResponseViewModel

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=11; IE=10; IE=9; IE=8; IE=7; IE=EDGE" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8" />
    <title>- صفحة الطلبات</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/css/Login/style_Ar.css?ver=003">
</head>
<body dir="rtl">
    <div class="text-center" style="width: 70%; padding-right: 10px;">
        <table class="table text-center">
            <thead>
                <tr>
                    <th>رمز&nbsp;المقرر&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</th>
                    <th>رقم&nbsp;الشعبة&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</th>
                    <th>مسمى&nbsp;المقرر&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</th>
                    <th>عدد&nbsp;الساعات&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</th>
                    <th>نوع&nbsp;الطلب&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</th>
                    <th>حالة&nbsp;الطلب&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</th>
                    <th>السبب&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Requests)
                {
                    <tr>
                        <td>@item.Section.CourseCode&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>
                        <td>@item.SectionNumber&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>
                        <td>@item.Section.Course.Title&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>
                        <td>@item.Section.Duration&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>
                        <td>@item.FormTitle&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>
                        <td>قيد الانتظار&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>
                    </tr>
                }
                @foreach (var item in Model.Responses)
                {
                    <tr>
                        <td>@item.Request.Section.CourseCode&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>
                        <td>@item.Request.SectionNumber&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>
                        <td>@item.Request.Section.Course.Title&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>
                        <td>@item.Request.Section.Duration&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>
                        <td>@item.Request.FormTitle&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>
                        <td>
                            @if (item.Status) {@Html.Raw("مقبول"); }
                        else { @Html.Raw("مرفوض"); }
                 &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                        </td>
                        <td>@item.Reason&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Users" asp-action="Student" asp-route-id="@Model.ID">رجوع</a>
    </div>
</body>
