@model IEnumerable<COCAS.Models.RequestViewModel>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=11; IE=10; IE=9; IE=8; IE=7; IE=EDGE" />
    <meta charset="UTF-8" />
    <title>صفحة الشؤون</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/css/Login/style_Ar.css?ver=003">
</head>
<body dir="rtl">
    <div class="text-center">
        @ViewData["noRequests"]
        @foreach (var item in Model)
        {
            <form asp-route-current_time="@item.CurrentTime" asp-route-student_id="@item.StudentID" method="post">
                <div class="form-group" style="padding-top: 10px;">
                    <label>@Html.DisplayFor(model => item.Requests[0].Student.FullName)</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input class="btn btn-default" type="submit" value="@item.Requests[0].FormTitle" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <label>عدد المواد: &nbsp;@Html.DisplayFor(model => item.Requests.Count)</label>
                </div>
            </form>
        }<br />
        <a asp-controller="Files" asp-action="UpdateFiles">تحديث البيانات</a><br />
    </div>
    <a style="padding-right: 10px;" asp-controller="Files" asp-action="Upload">حذف كل البيانات وإضافة بيانات جديدة</a>
</body>
