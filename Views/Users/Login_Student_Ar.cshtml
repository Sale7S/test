@model COCAS.Models.User
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=11; IE=10; IE=9; IE=8; IE=7; IE=EDGE" />
    <meta charset="UTF-8" />
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/css/Login/style_Ar.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body dir="RTL">
    <div class="headerContent">
        <div class="logo">
            <a href="">
                <img src="~/images/Login/logo.png" title="Home page">
            </a>
        </div>
        <div class="vision2030">
            <img src="~/images/Login/vision2030.png" title="Home page">
        </div>
    </div>

    <nav class="navbar">
        <a class="homePage" href="">كلية الحاسب</a>
        <a class="EngilshPage" asp-action="Login_Student_Eng">English</a>
    </nav>

    <div class="container">
        <div class="content">
            <div class="login">
                <form id="loginForm" asp-controller="UsersController" asp-action="Login_Student_Ar">
                    <div asp-validation-summary="All"></div>
                    @ViewData["E_Username"]
                    @ViewData["E_Password"]
                    @ViewData["E_Type"]
                    <div class="avatar">
                        <img src="~/images/Login/avatar.png" height="66" width="66" border="0">
                    </div>

                    <div class="loginFeilds">
                        <div class="input">
                            <label asp-for="Username" class="username required">
                                <img src="~/images/Login/username.png" height="16" width="12" border="0">
                                <span class="labelTxt">اسم المستخدم</span>
                            </label>
                            <input asp-for="Username" name="Username" value="" class="userbg non-empty" size="15">
                            <span asp-validation-for="Username"></span>
                        </div>
                        <div class="input">
                            <label asp-for="Password" class="username required">
                                <img src="~/images/Login/password.png" height="16" width="12" border="0">
                                <span class="labelTxt">كلمة السر</span>
                            </label>
                            <input asp-for="Password" name="Password" value="" size="15" class="userbg non-empty">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="input">
                            <select style="display: block; margin-right: auto; margin-left: auto;" asp-for="Type" name="Type" asp-items="ViewBag.Type" size="1" class="userbg non-empty"></select>
                            <span asp-validation-for="Type"></span>
                        </div>

                        <script src="~/js/Login/form.js"></script>

                        <div class="loginButton">
                            <a href="#">
                                <span class="loginBtn">دخول</span>
                            </a>
                        </div>
                        <div class="lostPassword">
                            <a href="../passwordreset/password_reset_Ar" target="_blank">
                                <img src="~/images/Login/reset.png" height="20" width="18" border="0">
                                <span class="lostPasswordTxt"> نسيت كلمة المرور</span>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="footer">
        <div id="copyrights" class="copyrights" data-date="">
        </div>
    </div>

</body>
</html>
